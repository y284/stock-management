<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.31.xsd">
  <changeSet id="009-purchase_order_line-constraints" author="mehdi">
    <addAutoIncrement tableName="purchase_order_line" columnName="id" columnDataType="BIGINT" incrementBy="1" startWith="1"/>
    <addPrimaryKey tableName="purchase_order_line" columnNames="id" constraintName="pk_purchase_order_line"/>
    <createIndex tableName="purchase_order_line" indexName="idx_purchase_order_line_uuid" unique="true">
      <column name="uuid"/>
    </createIndex>
    <addForeignKeyConstraint constraintName="fk_purchase_order_line_purchase_order_id_purchase_order" baseTableName="purchase_order_line" baseColumnNames="purchase_order_id" referencedTableName="purchase_order" referencedColumnNames="id"/>
    <createIndex tableName="purchase_order_line" indexName="idx_purchase_order_line_purchase_order_id">
      <column name="purchase_order_id"/>
    </createIndex>
    <addForeignKeyConstraint constraintName="fk_purchase_order_line_product_id_product" baseTableName="purchase_order_line" baseColumnNames="product_id" referencedTableName="product" referencedColumnNames="id"/>
    <createIndex tableName="purchase_order_line" indexName="idx_purchase_order_line_product_id">
      <column name="product_id"/>
    </createIndex>
  </changeSet>
</databaseChangeLog>
