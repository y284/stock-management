<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.31.xsd">
  <changeSet id="001-entreprise-constraints" author="mehdi">
    <addAutoIncrement tableName="entreprise" columnName="id" columnDataType="BIGINT" incrementBy="1" startWith="1"/>
    <addPrimaryKey tableName="entreprise" columnNames="id" constraintName="pk_entreprise"/>
    <addUniqueConstraint tableName="entreprise" columnNames="name" constraintName="uq_entreprise_name"/>
    <createIndex tableName="entreprise" indexName="idx_entreprise_uuid" unique="true">
      <column name="uuid"/>
    </createIndex>
  </changeSet>
</databaseChangeLog>
