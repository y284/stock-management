<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.31.xsd">
  <changeSet id="009-sale_commande-constraints" author="mehdi">
    <addAutoIncrement tableName="sale_commande" columnName="id" columnDataType="BIGINT" incrementBy="1" startWith="1"/>
    <addPrimaryKey tableName="sale_commande" columnNames="id" constraintName="pk_sale_commande"/>
    <createIndex tableName="sale_commande" indexName="idx_sale_commande_uuid" unique="true">
      <column name="uuid"/>
    </createIndex>
    <addForeignKeyConstraint constraintName="fk_sale_commande_client_id_client" baseTableName="sale_commande" baseColumnNames="client_id" referencedTableName="client" referencedColumnNames="id"/>
    <createIndex tableName="sale_commande" indexName="idx_sale_commande_client_id">
      <column name="client_id"/>
    </createIndex>
    <addForeignKeyConstraint constraintName="fk_sale_commande_warehouse_id_warehouse" baseTableName="sale_commande" baseColumnNames="warehouse_id" referencedTableName="warehouse" referencedColumnNames="id"/>
    <createIndex tableName="sale_commande" indexName="idx_sale_commande_warehouse_id">
      <column name="warehouse_id"/>
    </createIndex>
  </changeSet>
</databaseChangeLog>
