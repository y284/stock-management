<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.31.xsd">
  <changeSet id="013-invoice_client-constraints" author="mehdi">
    <addAutoIncrement tableName="invoice_client" columnName="id" columnDataType="BIGINT" incrementBy="1" startWith="1"/>
    <addPrimaryKey tableName="invoice_client" columnNames="id" constraintName="pk_invoice_client"/>
    <createIndex tableName="invoice_client" indexName="idx_invoice_client_uuid" unique="true">
      <column name="uuid"/>
    </createIndex>
    <addForeignKeyConstraint constraintName="fk_invoice_client_sale_commande_id_sale_commande" baseTableName="invoice_client" baseColumnNames="sale_commande_id" referencedTableName="sale_commande" referencedColumnNames="id"/>
    <createIndex tableName="invoice_client" indexName="idx_invoice_client_sale_commande_id">
      <column name="sale_commande_id"/>
    </createIndex>
  </changeSet>
</databaseChangeLog>
