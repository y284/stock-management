<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.31.xsd">
  <changeSet id="003-enterprise-constraints" author="mehdi">
    <addAutoIncrement tableName="enterprise" columnName="id" columnDataType="BIGINT" incrementBy="1" startWith="1"/>
    <addPrimaryKey tableName="enterprise" columnNames="id" constraintName="pk_enterprise"/>
    <addUniqueConstraint tableName="enterprise" columnNames="name" constraintName="uq_enterprise_name"/>
    <createIndex tableName="enterprise" indexName="idx_enterprise_uuid" unique="true">
      <column name="uuid"/>
    </createIndex>
  </changeSet>
</databaseChangeLog>
