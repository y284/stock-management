<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.31.xsd">
  <changeSet id="014-sales_invoice-constraints" author="mehdi">
    <addAutoIncrement tableName="sales_invoice" columnName="id" columnDataType="BIGINT" incrementBy="1" startWith="1"/>
    <addPrimaryKey tableName="sales_invoice" columnNames="id" constraintName="pk_sales_invoice"/>
    <createIndex tableName="sales_invoice" indexName="idx_sales_invoice_uuid" unique="true">
      <column name="uuid"/>
    </createIndex>
    <addForeignKeyConstraint constraintName="fk_sales_invoice_sales_order_id_sales_order" baseTableName="sales_invoice" baseColumnNames="sales_order_id" referencedTableName="sales_order" referencedColumnNames="id"/>
    <createIndex tableName="sales_invoice" indexName="idx_sales_invoice_sales_order_id">
      <column name="sales_order_id"/>
    </createIndex>
    <createIndex tableName="sales_invoice" indexName="idx_sales_invoice_invoice_number">
      <column name="invoice_number"/>
    </createIndex>
  </changeSet>
</databaseChangeLog>
