<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.31.xsd">
  <changeSet id="001-users-constraints" author="mehdi">
    <addAutoIncrement tableName="users" columnName="id" columnDataType="BIGINT" incrementBy="1" startWith="1"/>
    <addPrimaryKey tableName="users" columnNames="id" constraintName="pk_users"/>
    <addUniqueConstraint tableName="users" columnNames="username" constraintName="uq_users_username"/>
    <addUniqueConstraint tableName="users" columnNames="email" constraintName="uq_users_email"/>
    <addUniqueConstraint tableName="users" columnNames="keycloak_id" constraintName="uq_users_keycloak_id"/>
    <createIndex tableName="users" indexName="idx_users_uuid" unique="true">
      <column name="uuid"/>
    </createIndex>
    <addForeignKeyConstraint constraintName="fk_users_warehouse_id_warehouse" baseTableName="users" baseColumnNames="warehouse_id" referencedTableName="warehouse" referencedColumnNames="id"/>
    <createIndex tableName="users" indexName="idx_users_warehouse_id">
      <column name="warehouse_id"/>
    </createIndex>
  </changeSet>
</databaseChangeLog>
