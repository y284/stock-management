<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.31.xsd">
  <changeSet id="006-supplier-constraints" author="mehdi">
    <addAutoIncrement tableName="supplier" columnName="id" columnDataType="BIGINT" incrementBy="1" startWith="1"/>
    <addPrimaryKey tableName="supplier" columnNames="id" constraintName="pk_supplier"/>
    <addUniqueConstraint tableName="supplier" columnNames="email" constraintName="uq_supplier_email"/>
    <addUniqueConstraint tableName="supplier" columnNames="iban" constraintName="uq_supplier_iban"/>
    <createIndex tableName="supplier" indexName="idx_supplier_uuid" unique="true">
      <column name="uuid"/>
    </createIndex>
    <addForeignKeyConstraint constraintName="fk_supplier_warehouse_id_warehouse" baseTableName="supplier" baseColumnNames="warehouse_id" referencedTableName="warehouse" referencedColumnNames="id"/>
    <createIndex tableName="supplier" indexName="idx_supplier_warehouse_id">
      <column name="warehouse_id"/>
    </createIndex>
  </changeSet>
</databaseChangeLog>
