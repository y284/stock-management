<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.31.xsd">
  <changeSet id="007-client-constraints" author="mehdi">
    <addAutoIncrement tableName="client" columnName="id" columnDataType="BIGINT" incrementBy="1" startWith="1"/>
    <addPrimaryKey tableName="client" columnNames="id" constraintName="pk_client"/>
    <addUniqueConstraint tableName="client" columnNames="email" constraintName="uq_client_email"/>
    <addUniqueConstraint tableName="client" columnNames="rib" constraintName="uq_client_rib"/>
    <createIndex tableName="client" indexName="idx_client_uuid" unique="true">
      <column name="uuid"/>
    </createIndex>
    <addForeignKeyConstraint constraintName="fk_client_warehouse_id_warehouse" baseTableName="client" baseColumnNames="warehouse_id" referencedTableName="warehouse" referencedColumnNames="id"/>
    <createIndex tableName="client" indexName="idx_client_warehouse_id">
      <column name="warehouse_id"/>
    </createIndex>
  </changeSet>
</databaseChangeLog>
