<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.31.xsd">
  <changeSet id="001-product-constraints" author="mehdi">
    <addAutoIncrement tableName="product" columnName="id" columnDataType="BIGINT" incrementBy="1" startWith="1"/>
    <addPrimaryKey tableName="product" columnNames="id" constraintName="pk_product"/>
    <addUniqueConstraint tableName="product" columnNames="uuid" constraintName="uq_product_uuid"/>
    <addUniqueConstraint tableName="product" columnNames="sku" constraintName="uq_product_sku"/>
    <createIndex tableName="product" indexName="idx_product_name">
      <column name="name"/>
    </createIndex>
  </changeSet>
</databaseChangeLog>
