<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.31.xsd">
  <changeSet id="014-invoice_supplier-constraints" author="mehdi">
    <addAutoIncrement tableName="invoice_supplier" columnName="id" columnDataType="BIGINT" incrementBy="1" startWith="1"/>
    <addPrimaryKey tableName="invoice_supplier" columnNames="id" constraintName="pk_invoice_supplier"/>
    <createIndex tableName="invoice_supplier" indexName="idx_invoice_supplier_uuid" unique="true">
      <column name="uuid"/>
    </createIndex>
    <addForeignKeyConstraint constraintName="fk_invoice_supplier_supplier_commande_id_supplier_commande" baseTableName="invoice_supplier" baseColumnNames="supplier_commande_id" referencedTableName="supplier_commande" referencedColumnNames="id"/>
    <createIndex tableName="invoice_supplier" indexName="idx_invoice_supplier_supplier_commande_id">
      <column name="supplier_commande_id"/>
    </createIndex>
  </changeSet>
</databaseChangeLog>
