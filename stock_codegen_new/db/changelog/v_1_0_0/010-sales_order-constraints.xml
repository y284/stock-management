<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.31.xsd">
  <changeSet id="010-sales_order-constraints" author="mehdi">
    <addAutoIncrement tableName="sales_order" columnName="id" columnDataType="BIGINT" incrementBy="1" startWith="1"/>
    <createIndex tableName="sales_order" indexName="idx_sales_order_uuid" unique="true">
      <column name="uuid"/>
    </createIndex>
    <addForeignKeyConstraint constraintName="fk_sales_order_client_id_client" baseTableName="sales_order" baseColumnNames="client_id" referencedTableName="client" referencedColumnNames="id"/>
    <createIndex tableName="sales_order" indexName="idx_sales_order_client_id">
      <column name="client_id"/>
    </createIndex>
    <addForeignKeyConstraint constraintName="fk_sales_order_warehouse_id_warehouse" baseTableName="sales_order" baseColumnNames="warehouse_id" referencedTableName="warehouse" referencedColumnNames="id"/>
    <createIndex tableName="sales_order" indexName="idx_sales_order_warehouse_id">
      <column name="warehouse_id"/>
    </createIndex>
  </changeSet>
</databaseChangeLog>
