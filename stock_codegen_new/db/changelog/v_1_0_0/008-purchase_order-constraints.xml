<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.31.xsd">
  <changeSet id="008-purchase_order-constraints" author="mehdi">
    <addAutoIncrement tableName="purchase_order" columnName="id" columnDataType="BIGINT" incrementBy="1" startWith="1"/>
    <createIndex tableName="purchase_order" indexName="idx_purchase_order_uuid" unique="true">
      <column name="uuid"/>
    </createIndex>
    <addForeignKeyConstraint constraintName="fk_purchase_order_supplier_id_supplier" baseTableName="purchase_order" baseColumnNames="supplier_id" referencedTableName="supplier" referencedColumnNames="id"/>
    <createIndex tableName="purchase_order" indexName="idx_purchase_order_supplier_id">
      <column name="supplier_id"/>
    </createIndex>
    <addForeignKeyConstraint constraintName="fk_purchase_order_warehouse_id_warehouse" baseTableName="purchase_order" baseColumnNames="warehouse_id" referencedTableName="warehouse" referencedColumnNames="id"/>
    <createIndex tableName="purchase_order" indexName="idx_purchase_order_warehouse_id">
      <column name="warehouse_id"/>
    </createIndex>
  </changeSet>
</databaseChangeLog>
